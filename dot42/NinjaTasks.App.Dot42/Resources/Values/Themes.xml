<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <color name="start">#00AC14</color>
  <color name="stop">#E20000</color>

  <color name="actionbar_text">#000080</color>
  <color name="theme_yellow">#FFED00</color>

  <color name="taskTextColor">#404040</color>
  <color name="taskSecondaryTextColor">#50000000</color>
  

  <drawable name="actionbar_background">#FEF5D9</drawable>

  <!-- general styles for the action bar -->
  <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
      <item name="android:titleTextStyle">@style/TitleTextStyle</item>
      <item name="android:background">@drawable/actionbar_background</item>
      <item name="android:backgroundStacked">@drawable/actionbar_background</item>
      <item name="android:backgroundSplit">@drawable/actionbar_background</item>
    </style>

    <!-- action bar title text -->
  <style name="TitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
      <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle" parent="@android:style/Widget.ActionBar.TabText">
      <item name="android:textColor">@color/actionbar_text</item>
    </style>
  
  <style name="ThemeNinjaTasks" parent="ThemeHoloLightDarkActionBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>

    <!--item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
    <item name="android:actionMenuTextColor">@color/actionbar_text</item-->

  </style>

  <!-- Task-Lists List (left side) -->
  <style name="TaskListsListStyleLight">
    <item name="android:divider">@null</item>
    <item name="android:dividerHeight">0dp</item>
    <item name="android:listSelector">@android:color/transparent</item>
    <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>

  <style name="TaskListsListRowStyleLight">
    <item name="android:singleLine">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:textColor">@android:color/primary_text_light</item>
    <!--item name="android:fontFamily">sans-serif-light</item-->
  </style>

  <style name="TaskListsListRowSecondaryStyleLight" parent="@style/TaskListsListRowStyleLight">
    <item name="android:textColor">@android:color/secondary_text_light</item>
  </style>

  <style name="TaskListStyleLight">
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">4dp</item>
    <item name="android:listSelector">@android:color/transparent</item>
    <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>


  <!-- This theme doesn't exist in honeycomb -->
  <style name="ThemeHoloLightDarkActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:background">@null</item>
    <item name="android:windowBackground">@color/googlenow_grey</item>
    <item name="android:colorBackgroundCacheHint">@color/googlenow_grey</item>
    <item name="navigation_refresh">@drawable/navigation_refresh_dark </item>
    <item name="action_search">@drawable/action_search_dark </item>
    <item name="action_toggle_completed">@drawable/action_toggle_completed_dark</item>
    <item name="action_settings">@drawable/action_settings_dark </item>
    <item name="content_new">@drawable/content_new_dark </item>
    <item name="content_discard">@drawable/content_discard_dark </item>
    <item name="content_copy">@drawable/content_copy_dark </item>
    <item name="content_paste">@drawable/content_paste_dark </item>
    <item name="content_undo">@drawable/content_remove_dark </item>
    <item name="ab_cancel">@drawable/content_remove_dark </item>
    <item name="content_remove">@drawable/content_remove_light </item>
    <item name="social_share">@drawable/social_share_dark </item>
    <item name="device_access_secure">@drawable/device_access_secure_dark</item>
    <item name="device_access_not_secure">@drawable/device_access_not_secure_dark</item>
    <item name="navigation_accept">@drawable/navigation_accept_dark</item>

    <!-- <item name="my_list_selector">?android:attr/activatedBackgroundIndicator</item> -->
    <item name="my_list_selector">?android:attr/activatedBackgroundIndicator</item>
    <item name="my_list_background">@color/listLightBG</item>
    <item name="editorBackgroundColor">@drawable/card_light</item>
    <item name="ActionBarDropDownItem">@style/ActionBarDropDownItem.Dark</item>
    <item name="btn_default_selector">@drawable/btn_default_selector_dark</item>
    <item name="img_default_selector">@drawable/img_default_selector_light</item>
    <item name="SpinnerStyle">@android:style/Widget.Holo.Light.Spinner</item>
    <item name="expander_open_holo">@drawable/ic_action_big_expander_open_light</item>
    <item name="expander_close_holo">@drawable/ic_action_big_expander_close_light</item>
    <item name="list_divider_holo">@drawable/list_divider_holo_light</item>
    <item name="ic_action_list">@drawable/ic_action_list_dark</item>
    <item name="ic_action_share">@drawable/ic_action_share_dark</item>
    <item name="ic_action_add_list">@drawable/ic_playlist_add_white_48dp_60</item>
    <item name="ic_action_settings">@drawable/ic_settings_white_48dp_60</item>
    <item name="ic_action_toggle_completed">@drawable/ic_action_toggle_completed_dark</item>
    <item name="btn_delete">@drawable/btn_delete_light</item>
    

    <!-- <item name="viewpager_bg">@color/viewpager_darkgrey</item> -->
    <item name="viewpager_bg">@color/googlenow_grey_trans</item>
    <item name="textColorPrimary">?android:attr/textColorPrimary</item>
    <item name="textColorSecondary">?android:attr/textColorSecondary</item>
    <item name="labelAddItemTextColor">@color/labelItemTextColorLight</item>
    <item name="body_new">@drawable/content_new_light </item>
    <item name="body_remove">@drawable/content_remove_light</item>
    <item name="body_delete">@drawable/content_discard_light</item>
    <item name="list_item_card_background">@drawable/card_light</item>
    <item name="drag_handle_color">@color/dragHandleColorLight</item>
    <item name="TaskListItem">@style/TaskListItemLight</item>
    <item name="ListDividerStyle">@style/ListSpaceDividerStyle</item>
    <item name="ListMarginStyle">@style/ListMarginStyleCard</item>

    <item name="TaskListsListStyle">@style/TaskListsListStyleLight</item>
    <item name="TaskListsListRowStyle">@style/TaskListsListRowStyleLight</item>
    <item name="TaskListsListRowSecondaryStyle">@style/TaskListsListRowSecondaryStyleLight</item>

    <item name="TaskListStyle">@style/TaskListStyleLight</item>

    <!-- ShowCaseView -->
    <!--<item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>-->

    <!-- Pull to refresh style -->
    <!--<item name="ptrHeaderStyle">@style/PullToRefreshStyle</item>-->
  </style>  
  
  <style name="ThemeSplash" parent="@android:Theme.Light">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>
</resources>
