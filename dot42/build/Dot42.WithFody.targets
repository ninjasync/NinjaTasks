 <Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
      <!-- Indicate we are the Dot42 platform and set the registry base. This needs to be done prior to importing the common targets -->
      <TargetFrameworkIdentifier>Dot42</TargetFrameworkIdentifier>
      <FrameworkRegistryBase>Software\dot42\Android</FrameworkRegistryBase>
      <Dot42ReferenceAssembliesFolder Condition="'$(Dot42ReferenceAssembliesFolder)' == ''">$(registry:HKEY_CURRENT_USER\SOFTWARE\dot42\Android@ReferenceAssemblies)</Dot42ReferenceAssembliesFolder>
      <Dot42ReferenceAssembliesFolder Condition="'$(Dot42ReferenceAssembliesFolder)' == ''">$(registry:HKEY_LOCAL_MACHINE\SOFTWARE\dot42\Android@ReferenceAssemblies)</Dot42ReferenceAssembliesFolder>
      <_ReferenceAssembliesFolder Condition="'$(_ReferenceAssembliesFolder)' == ''">$(Dot42ReferenceAssembliesFolder)</_ReferenceAssembliesFolder>
      <TargetFrameworkDirectory Condition="'$(TargetFrameworkDirectory)' == ''">$(Dot42ReferenceAssembliesFolder)\$(AndroidVersion)</TargetFrameworkDirectory>
      <FrameworkPathOverride>$(TargetFrameworkDirectory)</FrameworkPathOverride>
    </PropertyGroup>

    <PropertyGroup>
      <!-- Setup internal properties -->
      <PackageFilename>$(ApkFilename)</PackageFilename>
    </PropertyGroup>

    <Import Project="$(MSBuildBinPath)\Microsoft.CSharp.Targets" />
	
    <Import Project="..\..\3rdParty\nuget\Fody.1.26.4\build\Fody.targets"  />
   
    <!--Import Project="AutoAnnotations.targets" /-->
	
    <Import Project="$(Dot42ExtensionsPath)\dot42.Tasks.targets" />
    <Import Project="$(Dot42ExtensionsPath)\dot42.Common.targets" />
    <Import Project="$(Dot42ExtensionsPath)\dot42.Device.targets" />
</Project>